{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "checkJs": false,
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types",
            "./lib/typings",
            "./test/typings"
        ]
    },
    "include": [
        "lib",
        "test"
    ],
    "exclude": [
        "node_modules",
        ".vscode"
    ]
}
